<Window x:Class="SolarSystemWarfare.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SolarSystemWarfare"
        mc:Ignorable="d"
        Title="Welcome" Height="250" Width="650" WindowStyle="None" WindowStartupLocation="CenterScreen" AllowsTransparency="True">
    <Window.Background>
        <SolidColorBrush Opacity = "0.5" Color="Black"/>
    </Window.Background>
    <StackPanel>
        <Label Content = "Solar System Warfare" HorizontalAlignment="Stretch"
               HorizontalContentAlignment="Center" Margin="0 5" FontFamily="/SolarSystemWarfare;component/Fonts/#Neutronium"
               FontSize="55" Padding="0 15"  Foreground="LightGray" Height="91"/>
        <StackPanel Orientation = "Horizontal" Margin="122,5" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image x:Name="Ship1" Source="Images/EnemyShip.png" Height="50" Margin="30"  />
            <Image x:Name="Earth" Source="Images/EarthBattleShip.png" Height="100" Margin="30" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <Image x:Name="Ship2" Source="Images/EnemyShip.png" Height="50" Margin="30" />
        </StackPanel>
    </StackPanel>
</Window>